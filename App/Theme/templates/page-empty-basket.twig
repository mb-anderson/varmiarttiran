{% extends "page.twig" %}

{% block content %}
	<div class="row" id="checkout-page">
		<div class="col-md-8">
			{{ controller.printMessages() }}
			{{ controller.echoContent()|raw }}
		</div>
		<div class="col-12">
			<div class="card p-2 mt-lg-0 mt-sm-2 text-center text-info">
				<i class="fa fa-shopping-cart display-2"></i>
                <h2>
                    {{ t("there_is_no_item_in_your_basket") }}
                </h2>
                <div>
                    <a class="btn btn-outline-primary" href="{{ constant("BASE_URL") ~ "/products" }}">
                        <i class="fa fa-chevron-left"></i> {{ t("continue_shopping") }}
                    </a>
                </div>
			</div>
		</div>
	</div>
{% endblock %}
