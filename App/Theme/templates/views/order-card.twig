<div class='{{ view.classes|join(" ") }}' {{ view.renderAttributes()|raw }}>
	{% for row in view.data %}
		<div class="col-12 p-2 align-self-stretch">
			<div class="text-left card shadow p-2 h-100 d-block">
				<div class="float-right">
					{{ row.4 }}
				</div>
				<h3 class="text-primary">{{ t("order_id") }}: #{{ row.order_id }}</h3>
				{% if row.ref %}
					<p class="text-primary">
						{{ view.headers.ref }}: {{ row.ref }}
					</p>
				{% endif %}
                <p class="text-primary">
                    {{ view.headers.order_time }}: {{ row.order_time }}
                </p>
				<p class="text-primary">
                    {{ t(row.type ~ "_date") }}: {{ row.delivery_date|date("d.m.Y") }}
                </p>
                <p class="text-primary">
                    {{ view.headers.total }}
							:
					{{ row.total }}
                </p>
                <div class="d-flex flex-wrap">
				{{ row.1 }}
                {{ row.0 }}
				{{ row.2 }}
				{{ row.3 }}
                </div>
			</div>
		</div>
	{% endfor %}
</div>
